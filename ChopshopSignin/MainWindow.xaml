<Window x:Class="ChopshopSignin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChopShop Sign-in App" Height="350" Width="525"
        TextInput="Window_TextInput"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowState="Maximized"
        WindowStyle="None">

    <!--
    WindowState="Maximized"
        WindowStyle="None">
    -->
    <!--
     SizeToContent="WidthAndHeight">       
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="1" TextElement.FontSize="18">
            <GroupBox.Header>
                <TextBlock FontSize="22">Signed In</TextBlock>
            </GroupBox.Header>
            <ItemsControl ItemsSource="{Binding Path=StudentsIn}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding CurrentTimeString}" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center"
                   FontWeight="Bold" FontSize="132"/>

            <TextBlock Grid.Row="1" Text="{Binding Path=LastScan}" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center"
                   FontWeight="Bold" FontSize="60"/>

        </Grid>

    </Grid>
</Window>
